<?xml version="1.0" encoding="utf-8"?>
<resources>

<style name="Theme.OscarInterface" parent="android:Theme.Material.Light.NoActionBar">
    <!--
        Customize your theme here.
        For example, you can set primary and secondary colors:
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    -->
</style>

<!-- Splash Screen Theme -->
<style name="Theme.App.Starting" parent="Theme.SplashScreen">
    <!-- Set the splash screen background, animated icon, and branding image. -->
    <item name="windowSplashScreenBackground">@color/soft_dark</item>

    <!-- Use windowSplashScreenAnimatedIcon to add either a drawable or an
         animated drawable. One of these is required. -->
    <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher</item>
    <!-- Required for animated icons -->
    <!-- <item name="windowSplashScreenAnimationDuration">200</item> -->

    <!-- Set the theme to apply after the splash screen disappears. -->
    <item name="postSplashScreenTheme">@style/Theme.OscarInterface</item>

    <!-- Optional: To hide the branding image, if you have one -->
    <!-- <item name="android:windowSplashScreenBrandingImage">@null</item> -->

    <!-- Optional: To tint the icon on the splash screen -->
    <!-- <item name="android:windowSplashScreenIconTintColor">@color/your_icon_tint_color</item> -->

    <!-- Optional: Background for the icon - only has an effect if the icon is not adaptive -->
    <!-- <item name="android:windowSplashScreenIconBackgroundColor">@color/your_icon_background_color</item> -->
</style>

</resources>